s_list
  div(class="post-list")
    s_list_rep
      article(class="py-6 group post-item hidden lg:block")
        a(href="[##_list_rep_link_##]")
          div
            div(class="flex flex-1 mt-1.5 space-x-6")
              s_list_rep_thumbnail
                div
                  img(src="[##_list_rep_thumbnail_##]" class="w-auto h-32 rounded-md group-hover:brightness-75 transition-all ease-in-out")
              div(class="w-3/5 flex flex-col justify-center")
                h1(class="text-2xl font-bold group-hover:underline") [##_list_rep_title_text_##]
                div(class="flex mt-1 space-x-2")
                  span(class="px-2 py-0.5 rounded-md bg-gray-200/50 text-sm")
                    | [##_list_rep_category_##]
                  span(class="px-2 py-0.5 rounded-md bg-gray-200/50 text-sm")
                    | [##_list_rep_regdate_##]
                div(class="break-keep w-auto max-h-[2.6rem] line-clamp-2 mt-2.5")
                  | [##_list_rep_summary_##]
      article(class="py-5 group post-item lg:hidden")
        a(href="[##_list_rep_link_##]")
          div
            s_list_rep_thumbnail
              div(class="mb-2")
                img(src="[##_list_rep_thumbnail_##]" class="w-full h-auto object-cover rounded-md group-hover:brightness-75 transition-all ease-in-out")
            h1(class="text-2xl font-bold group-hover:underline mt-4") [##_list_rep_title_text_##]
            span(class="text-base font-normal text-gray-400") [##_list_rep_category_##] &middot; [##_list_rep_regdate_##]
            div(class="flex justify-between")
              div(class="mt-1 break-keep w-full max-h-[2.6rem] line-clamp-2")
                | [##_list_rep_summary_##]
  div(class="flex justify-end mt-14")
    s_paging
      a([##_next_page_##] class="px-2.5 py-2 rounded-md cursor-pointer hover:bg-gray-100 transition-all ease-in-out view-more") 더보기 →
  div(class="mt-10")
    | [##_revenue_list_lower_##]

  include Scripts/ViewMoreButton
