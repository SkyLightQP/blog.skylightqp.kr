doctype html

html(
  x-data="{ dark: window.matchMedia('(prefers-color-scheme: dark)').matches }"
  :class="{ dark: dark }"
  lang="ko")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")

    title [##_page_title_##]

    link(rel="stylesheet" href="//cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/variable/pretendardvariable-dynamic-subset.min.css")
    link(rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css")
    script(src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous")

    style
      include:postcss @/app.css

  body(id="[##_body_id_##]" class="bg-white dark:bg-zinc-900")
    block TIDORY

    script.
      document.addEventListener("DOMContentLoaded", () => Alpine.start())
